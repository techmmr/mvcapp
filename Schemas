userSchema {
	userId		: String
	name		: String,
	address		: String,
	username	: { type: String, required: true, unique: true, default: this.name},
	password	: { type: String, required: true, default: "password"},
	admin		: { type: Boolean, default: false},
	cartId		: String,
	dateCreated	: Date
}

// State is going to hold one of 3 states "empty", "loaded", "ordered"
cartSchema {
	cartId		: { type: String, unique: true }
	items		: [{
		itemId	: String,
		quantity: Number
	}]
	totalCost	: Number,
	State		: String
}

// State is going to hold one of 3 states "confirmed", "paid", "delivered"
orderSchema {
	userId			: String,
	cartId			: String,
	State			: String,
	transactionId	: String
}

itemSchema {
	itemId		: String,
	name		: String,
	cost		: Number,
	Vendor		: String,
	Inventory	: Number
}
