<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./../partials/head.ejs %>
</head>
<body class="container">

<header>
  <% include ../partials/header.ejs %>
</header>

<main>
    <h2>Cart</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Remove</th>
        </tr>
        </thead>
        <tbody>
        <% cart.items.forEach((item) => { %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.quantity %></td>
            <td>
                <form action="/cart/removeItem" method="post">
                    <input type="hidden" name="itemId" value=<%= item.itemId %> >
                    <input type="hidden" name="itemQuantity" value=<%= item.quantity %> >
                    <input name="removeItem" value="Remove" type="submit" />
                </form>
            </td>
        </tr>
        <% }); %>
        <br>
        <tr>
            <td>Total Cost</td>
            <td><%= cart.totalCost %></td>
        </tr>
        </tbody>
    </table>
    <form action="/cart/createOrder" method="post">
        <input name="createOrder" value="Create Order" type="submit" />
    </form>
</main>

<footer>
  <% include ../partials/footer.ejs %>
</footer>

</body>
</html>
